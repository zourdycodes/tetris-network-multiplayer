body {
        background: #202028;
        color: #fff;
        font-family: sans-serif;
        font-size: 62.5%;
        text-align: center;
      }

      .canvas {
        border: 2px solid #fff;
        height: 90vh;
      }

      .heading {
        text-align: center;
        font-size: 3rem;
        margin-bottom: 30px;
      }

      #score {
        text-align: center;
        margin-bottom: 40px;
        font-size: 2.5rem;
      }

      @media (max-width: 600px) {
        .heading {
          font-size: 1.8rem;
          margin-bottom: 10px;
        }
      }