body {
        background: #202028;
        color: #fff;
        font-family: sans-serif;
        font-size: 62.5%;
      }

      .canvas {
        display: flex;
        justify-content: center;
        align-items: center;
      }

      .heading {
        text-align: center;
        margin-bottom: 30px;
      }

      #score {
        text-align: center;
        margin-bottom: 40px;
        font-size: 2.5rem;
      }

      @media (max-width: 600px) {
        .heading {
          font-size: 1.8rem;
          margin-bottom: 10px;
        }
      }